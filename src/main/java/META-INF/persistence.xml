<?xml version="1.0" encoding="utf-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="KidsLearning">
		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<!-- Database connection settings -->
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:db/kids" />
			<property name="hibernate.show_sql" value="true" />

			<property name="hibernate.connection.pool_size" value="2" />

			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.charSet" value="UTF-8" />
		</properties>
	</persistence-unit>
	<persistence-unit name="KidsLearningTest">
		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect" />
			<!-- Database connection settings -->
			<property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:db/test/kids" />
			<property name="hibernate.show_sql" value="true" />

			<property name="hibernate.hbm2ddl.auto" value="create" />
			<property name="hibernate.connection.charSet" value="UTF-8" />
		</properties>
	</persistence-unit>
</persistence>